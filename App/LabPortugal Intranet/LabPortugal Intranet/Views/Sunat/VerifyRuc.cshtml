@model Farmacia
@{
    ViewData["Title"] = "VerifyRuc";
    Layout = "~/Views/Shared/_Ruc.cshtml";
}

<div class="ruc_container h-100 d-flex justify-content-center align-items-center">
    <div class="ruc_container-element">
        <div class="ruc_img">
            <img src="~/images/sunat_logo.png"/>
        </div>
        <div class="ruc_container-form">
            <div class="">
                <div>
                    <div class=""><h2>Verificar RUC</h2></div>
                    <form asp-controller="Sunat" asp-action="VerifyRuc" method="post">
                        <div class="w-100 py-3  input_container-ruc"><input placeholder="Ingrese el RUC" asp-for="ruc" type="text" class="w-100 form-control"/></div>
                        <div class="w-100 text-center button_container-ruc"><button class="w-50 btn btn-primary" type="submit">Enviar</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="position-absolute bottom-0">

        @ViewBag.mensaje
        
    </div>
</div>

