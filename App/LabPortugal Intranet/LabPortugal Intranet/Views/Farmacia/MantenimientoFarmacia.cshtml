@model IEnumerable<LabPortugal_Intranet.Models.Farmacia>

@{
    ViewData["Title"] = "ObtenerTodos";
}

<h2 class="text-center">Farmacia</h2>
<br />

<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ruc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.razonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ruc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.razonSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.ActionLink("Actualizar", "Actualizar", new { id=item.id  }, new {@class="btn btn-primary"}) 
                    @Html.ActionLink("Detalle", "Detalles", new {  id=item.id  }, new {@class="btn btn-info"}) 
                    @Html.ActionLink("Eliminar", "Eliminar", new {  id=item.id  } , new {@class="btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>