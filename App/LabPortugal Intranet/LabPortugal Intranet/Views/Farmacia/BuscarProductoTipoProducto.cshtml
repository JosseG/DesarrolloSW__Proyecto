@model IEnumerable<LabPortugal_Intranet.Models.Producto>

@{
    ViewBag.Title = "BuscarProductoTipoProducto";
}
<h2 class="text-center">:::: MANTENIMIENTO FARMACO::::</h2>
<br />

<p>
    @using (Html.BeginForm())
    {
        <strong>Ingrese  Nombre de Producto</strong>
        <input type="text" name="nombre" value="@ViewBag.nombre" />
        <br />
        <br />
        <strong>Seleccione Tipo de Producto.</strong>
        @Html.DropDownList("id", (SelectList)ViewBag.TipoProducto)
        <br />
        <br />
        <input type="submit" value="BUSCAR..." class="btn btn-success" />
        <br />
    }
</p>


<p>
    @Html.ActionLink("Retornar al Modulo Principal", "Index")
</p>
<table class="table table-bordered table-striped">
    
    <tr>
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.idLaboratorio)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.idTipoProducto)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.codigoBarra)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.estado)
        </th>

        <th></th>
    </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.idLaboratorio)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.idTipoProducto)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.codigoBarra)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.estado)
            </td>

        </tr>
        }

</table>