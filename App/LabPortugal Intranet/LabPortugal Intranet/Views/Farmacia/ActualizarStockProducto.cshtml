
@model LabPortugal_Intranet.Models.Producto

@{
    ViewData["Title"] = "ActualizarStockProducto";
}

<h2>Actualizar Producto</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <dt class="text-lg-start">
            <img width="300" height="280" src="@Url.Action("Imagen","Farmacia", new {id =  Model.id})" />
        </dt>


        <form asp-action="ActualizarStockProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control"  readonly="readonly" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idLaboratorio" class="control-label"></label>
                <input asp-for="idLaboratorio" class="form-control" value="LAB0000001" readonly="readonly" />
                <span asp-validation-for="idLaboratorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idTipoProducto" class="control-label"></label>
                <input asp-for="idTipoProducto" class="form-control" />
                <span asp-validation-for="idTipoProducto" class="text-danger"></span>
               
            </div>
            <div class="form-group">
                <label asp-for="codigoBarra" class="control-label"></label>
                <input asp-for="codigoBarra" class="form-control" />
                <span asp-validation-for="codigoBarra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marca" class="control-label"></label>
                <input asp-for="marca" class="form-control" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock" class="control-label"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioUnidad" class="control-label"></label>
                <input asp-for="precioUnidad" class="form-control" />
                <span asp-validation-for="precioUnidad" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="estado" /> @Html.DisplayNameFor(model => model.estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" style="margin-top:8px;" asp-action="MantenimientoStockProducto">Regresar a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

