
@model LabPortugal_Intranet.Models.Producto

@{
    ViewData["Title"] = "AgregarStockProducto";
}

<h3>Agregar Producto</h3>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarStockProducto" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="idLaboratorio" class="control-label"></label>
                <input asp-for="idLaboratorio" class="form-control" value="LAB0000001" readonly="readonly" />
                <span asp-validation-for="idLaboratorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProducto" class="control-label"></label>  
                <br />
                @*@Html.DropDownList("TiposProductosList", (SelectList)ViewBag.TipoProducto)*@
                <select id="drpEmpList" class="form-control" asp-for="idTipoProducto" asp-items="@((SelectList)ViewBag.TipoProducto)">
                    
                </select>
                <span asp-validation-for="idTipoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoBarra" class="control-label"></label>
                <input asp-for="codigoBarra" class="form-control" />
                <span asp-validation-for="codigoBarra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marca" class="control-label"></label>
                <input asp-for="marca" class="form-control" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock" class="control-label"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioUnidad" class="control-label"></label>
                <input asp-for="precioUnidad" class="form-control" /> 
                <span asp-validation-for="precioUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagenProducto" class="control-label"></label>
                <div class="col-md-10">
                    <input type="file" name="postedFile"  />                   
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="estado" /> @Html.DisplayNameFor(model => model.estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" style="margin-top:8px;" asp-action="MantenimientoStockProducto">Regresar a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
