<table class="table table-bordered table-striped">

    <thead>
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.idLaboratorio)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.TipoProducto)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.codigoBarra)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.stock)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.precioUnidad)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.estado)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.idLaboratorio)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TipoProducto)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.codigoBarra)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.precioUnidad)
                   
            </td>
