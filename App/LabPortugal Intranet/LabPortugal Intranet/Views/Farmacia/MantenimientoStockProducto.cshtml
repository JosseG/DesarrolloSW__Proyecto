                    @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                    @Html.ActionLink("Actualizar", "ActualizarStockProducto", new { id=item.id  }) |
                    @Html.ActionLink("Detalle", "DetalleStockProducto", new {  id=item.id  }) |
                    @Html.ActionLink("Eliminar", "EliminarStockProducto", new {  id=item.id  })
            </td>
        </tr>
        }
    </tbody>
</table>
